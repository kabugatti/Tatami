  "bugs": {
    "url": "https://github.com/KaizeNodeLabs/Tatami/issues"
  },
  "homepage": "https://github.com/KaizeNodeLabs/Tatami#readme",
  "workspaces": [
    "apps/*"
  ],
  "packageManager": "npm@10.9.2",
  "devDependencies": {
    "turbo": "^2.4.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "i18next": "^24.2.3",
    "react-draggable": "^4.4.6",
    "react-i18next": "^15.4.1",
